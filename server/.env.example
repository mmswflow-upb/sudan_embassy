# Server Configuration
PORT=3000
NODE_ENV=development

# Firebase Configuration
# Path to your Firebase service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./credentials/firebase-sa-key.json

# Firebase Storage Bucket
# Format: gs://your-project-id.firebasestorage.app or gs://your-project-id.appspot.com
# If not set, will be inferred from the service account project_id
FIREBASE_BUCKET=gs://your-project-id.firebasestorage.app

# CORS Configuration
# Comma-separated list of allowed origins
# Example: http://localhost:5173,https://your-app.web.app,https://your-app.firebaseapp.com
CORS_ORIGINS=http://localhost:5173

# Email Configuration (Optional - for nodemailer)
# If not configured, emails will be logged to console instead
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=no-reply@sudanembassy.local

# Admin Email (Optional - receives notifications)
ADMIN_EMAIL=admin@sudanembassy.ro

# Upload Configuration
UPLOAD_DIR=./uploads
